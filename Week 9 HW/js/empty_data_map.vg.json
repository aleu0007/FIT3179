{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Cheese Consumed around the World",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/aleu0007/FIT3179/main/Week%209%20HW/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer":[
    {
      "transform": [
        {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/aleu0007/FIT3179/main/Week%209%20HW/data/global-cheese-consumption-2023-by-country.csv"
            },
            "key": "Country",
            "fields": ["Cheese Consumed (in 1,000 metric tons)"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Cheese Consumed (in 1,000 metric tons)",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [500, 50000, 10000],
            "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Cheese Consumed (in 1,000 metric tons)", "type": "quantitative"}
        ]
      }
    }
  ]
  
}