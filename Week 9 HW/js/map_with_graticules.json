{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "World Hunger",
  "data": {
        "url": "https://raw.githubusercontent.com/aleu0007/FIT3179/refs/heads/main/Week%209%20HW/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
  "projection": {
    "type": "equalEarth",
    "clipExtent": [[0, 0], [800, 380]]
  },
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/aleu0007/FIT3179/refs/heads/main/Week%209%20HW/js/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "lightskyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/aleu0007/FIT3179/refs/heads/main/Week%209%20HW/js/ne_110m_graticules_30.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "white"}
    },
    {
      "transform": [
        {
          "lookup": "properties.ADM0_ISO",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/aleu0007/FIT3179/refs/heads/main/Week%209%20HW/data/goal02_affordability.csv"
            },
            "key": "country_code",
            "fields": ["percentage_energy_sufficient_unafford", "cost_energy_sufficient", "CoCA_unafford_n"]
          },
          "default": 0
        },
        {"calculate": "datum.cost_energy_sufficient + 0.1", "as": "Cost Energy Efficient"}
      ],  
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "CoCA_unafford_n",
          "type": "quantitative",
          "title": "Cost of an Energy Efficient meal",
          "scale": {
            "type": "threshold",
            "domain": [0.5, 1.5, 2],
            "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "CoCA_unafford_n", "type": "quantitative", "title": "Cost of an Energy Sufficient Meal"}
        ]
      }
    }
  ]
}