{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "World Hunger",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/aleu0007/FIT3179/refs/heads/main/Week%209%20HW/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/aleu0007/FIT3179/refs/heads/main/Week%209%20HW/js/ne_110m_graticules_30.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/aleu0007/FIT3179/refs/heads/main/Week%209%20HW/data/goal02.affordability.csv"
            },
            "key": "country_name",
            "fields": ["percentage_energy_sufficient_unafford", "cost_energy_sufficient"]
          }
        },
        {"calculate": "datum.percentage_energy_sufficient_unafford + 0.1", "as": "Percentage of Energy Sufficient Unafford"}
      ],  
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "Percentage of Energy Sufficient Unafford",
          "type": "quantitative",
          "title": "% People cannot afford",
          "scale": {"scheme": "reds"}
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Percentage of Energy Sufficient Unafford", "type": "quantitative", "title": "% Cannot Afford"}
        ]
      }
    }
  ]
}